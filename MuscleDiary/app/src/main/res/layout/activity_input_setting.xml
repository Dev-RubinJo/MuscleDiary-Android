<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00E4E4E4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/bt_back_input_setting"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/space_input_setting"/>


    <View
        android:id="@+id/space_input_setting"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/chart_input_back"
        app:layout_constraintTop_toBottomOf="@id/bt_back_input_setting"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/input_setting_title"
        android:text="끼니 설정"
        android:textStyle="bold"
        android:textSize="21sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="@id/space_input_setting"
        app:layout_constraintBottom_toTopOf="@id/et_input_setting"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        />

    <EditText
        android:id="@+id/et_input_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:hint="@string/input_setting_hint"
        android:inputType="text"
        android:textColor="@color/colorPrimaryDark"
        android:background="@null"
        app:layout_constraintTop_toTopOf="@id/space_input_setting"
        app:layout_constraintBottom_toTopOf="@id/bt_complete_input_setting"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="3dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_input_setting"/>

    <Button
        android:id="@+id/bt_complete_input_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:text="@string/chart_input_str_complete"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>