<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/input_menu_item_tv_menu_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="음식이름"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/input_menu_item_tv_menu_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/input_menu_item_tv_menu_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세내역"
        android:textSize="11sp"
        android:textColor="@color/colorChartItemDescription"

        app:layout_constraintStart_toStartOf="@+id/input_menu_item_tv_menu_title"
        app:layout_constraintTop_toBottomOf="@+id/input_menu_item_tv_menu_title"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/input_menu_item_tv_menu_total_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="135kcal"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>