<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fragment_food_meal_back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="10dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/fragment_food_item_tv_meal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="끼니"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fragment_food_item_tv_total_calories"/>

    <TextView
        android:id="@+id/fragment_food_item_tv_total_calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100kcal"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginEnd="100dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_food_item_tv_meal_title"
        app:layout_constraintEnd_toStartOf="@id/fragment_food_item_btn_add_food"/>

    <Button
        android:id="@+id/fragment_food_item_btn_add_food"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:background="@drawable/fragment_food_calories_back"
        android:text="음식추가+"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_food_item_tv_total_calories"
        app:layout_constraintEnd_toStartOf="@id/fragment_food_item_btn_expand"/>

    <ImageButton
        android:id="@+id/fragment_food_item_btn_expand"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/down_side_arrow_icon"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_food_item_btn_add_food"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>