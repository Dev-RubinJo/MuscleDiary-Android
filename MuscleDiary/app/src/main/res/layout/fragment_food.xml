<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_home_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_food_title"
            android:textSize="23sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            />

        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fragment_home_calendarView"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:mcv_showOtherDates="all"
            app:mcv_selectionColor="@color/colorAccent"
            app:mcv_calendarMode="week"
            app:mcv_arrowColor="@android:color/transparent"
            app:mcv_tileHeight="30dp"
            app:mcv_tileWidth="53dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_home_tv_goal_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fragment_home_tv_minus"
                android:text="목표칼로리" />

            <TextView
                android:id="@+id/fragment_home_tv_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_tv_goal_cal"
                app:layout_constraintEnd_toStartOf="@+id/fragment_home_tv_eaten_cal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="-" />

            <TextView
                android:id="@+id/fragment_home_tv_eaten_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_tv_minus"
                app:layout_constraintEnd_toStartOf="@+id/fragment_home_tv_equal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="섭취칼로리" />

            <TextView
                android:id="@+id/fragment_home_tv_equal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_tv_eaten_cal"
                app:layout_constraintEnd_toStartOf="@+id/fragment_home_tv_left_cal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="=" />

            <TextView
                android:id="@+id/fragment_home_tv_left_cal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/fragment_home_tv_equal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="잔여칼로리" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</ScrollView>
