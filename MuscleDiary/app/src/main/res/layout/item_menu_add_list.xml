<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginEnd="5dp"
    android:layout_width="wrap_content"
    android:background="@drawable/fragment_food_calories_back"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/input_menu_item_tv_menu_add_list"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:text="음식이름"
        android:textSize="13sp"
        android:textStyle="bold"

        android:textColor="@color/colorAccent"/>

    <Button
        android:id="@+id/input_menu_item_btn_del_menu"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="5dp"
        android:text="X"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:background="@drawable/fragment_setting_profile_back"/>

</LinearLayout>