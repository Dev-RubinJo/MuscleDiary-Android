<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.munchkin.musclediary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".src.main.MainActivity"/>
        <activity android:name=".src.main.food.InputMenuActivity"/>
        <activity android:name=".src.main.chart.InputChartActivity"
            android:theme="@style/Transparent"/>
        <activity android:name=".src.main.setting.InputSettingActivity"
            android:theme="@style/Transparent"/>
        <activity android:name=".src.main.setting.dialog.GenderActivity"
            android:theme="@style/Transparent"/>
        <activity android:name=".src.signin.SignInActivity" />
        <activity android:name=".src.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>